{
  "name": "Backlog Chrome Sandbox",
  "version": "0.0.1",
  "permissions": [
    "notifications",
    "tabs",
    "http://*/*",
    "https://*/*"       
  ],
  "content_scripts": [
    {
      "matches": ["https://nulab.backlog.jp/view/*"],
      "js": ["common-libs.js","view_issue.js"]
    },
    {
      "matches": ["https://pad.nulab.co.jp/*"],
      "js": ["common-libs.js","etherpad.js"]
    }
  ]
}
